#include <stdio.h>

int main()
{
	int j = 3, k = 1;

	for (int i = 1; i <= j; i++)
	{
		printf(" ");
	}
	for (int i = 1; i <= k; i++)
	{
		printf("*");
	}
	for (int i = 1; i <= j; i++)
	{
		printf(" ");
	}
	printf("\n");
	j -= 1;
	k += 2;

	for (int i = 1; i <= j; i++)
	{
		printf(" ");
	}
	for (int i = 1; i <= k; i++)
	{
		printf("*");
	}
	for (int i = 1; i <= j; i++)
	{
		printf(" ");
	}
	printf("\n");
	j -= 1;
	k += 2;

	for (int i = 1; i <= j; i++)
	{
		printf(" ");
	}
	for (int i = 1; i <= k; i++)
	{
		printf("*");
	}
	for (int i = 1; i <= j; i++)
	{
		printf(" ");
	}
	printf("\n");
	j -= 1;
	k += 2;

	for (int i = 1; i <= j; i++)
	{
		printf(" ");
	}
	for (int i = 1; i <= k; i++)
	{
		printf("*");
	}
	for (int i = 1; i <= j; i++)
	{
		printf(" ");
	}
	printf("\n");
	j -= 1;
	k += 2;
	return 0;
}
